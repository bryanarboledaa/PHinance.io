<div class = "books-table-header"> ALL MINIBOOKS </div>
<div class = "books-table-container">
<div class="table-responsive-lg">
  <div class="product_list_container">
  <table class = "table">
    <tr scope="column">
      <td>MiniBook ID</td>
      <td>Minibook Name</td>
      <td>Minibook Price</td>
    </tr>
    <% @mini_books.each do |minibook| %>
    <% if minibook.user == current_user %>
      <tr scope="column">  
        <td><%= minibook.id %></td>
        <td><%= minibook.minibook_name %></td>
      <div>
        <td>
          <button type="button" class="btn btn-secondary"><%#= link_to 'BUY NOW', checkouts_create_path(id: minibook.id), remote: true, method: :post %></button>
          <button type="button" class="btn btn-secondary"><%= link_to 'Data', mini_book_minibook_entries_path(mini_book_id: minibook.id) %></button>
          <button type="button" class="btn btn-secondary"><%= link_to "Edit", edit_mini_book_path(minibook.id) %></button>
          <button type="button" class="btn btn-danger"><%= link_to "Delete", mini_book_path(minibook.id), method: :delete, :data => { :confirm => "Are you sure?" } %></button>
          <button type="button" class="btn btn-outline-light"><%#= link_to "Add Entry", new_mini_book_path(minibook.id) %></button>
        </td>
      </div>
    </tr>
    <% end %>
    <% end %>
  </table>
  </div>
</div>
</div>
  <button type="button" class="btn btn-outline-light"><%= link_to "Back", root_path %></button>
  <button type="button" class="btn btn-outline-light"><%= link_to "Create New Mini Book", new_mini_book_path %></button>
  <button type="button" class="btn btn-outline-light"><%= link_to "Export", minibook_export_path(format: :pdf) %></button>

