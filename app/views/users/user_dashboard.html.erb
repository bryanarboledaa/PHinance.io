  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
    integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk="
    crossorigin="anonymous"
  />
  <section class="p-3 my-container">
<h1 id= 'user__dashboard'>DASHBOARD</h1>
<ol class="breadcrumb mb-3">
  <li class="breadcrumb-item active">
    <%= current_user.present? ? "" : "Stranger" %>
    <h2>Welcome, <%= current_user.username %></h2>
    <% if current_user %>
    <h6>Customer ID:<%= current_user.stripe_customer_id %></h6>
    <h6>Plan:<%= current_user.plan %></h6>
    <h6>Subscription Status:<%= current_user.status %></h6>
    <%end %>
  </li>
</ol>
  <div class="col-md-10">
    <div class="row">
      <div class="col-xl-3 col-lg-6">
        <div class="card l-bg-gold">
          <div class="card-statistic-3 p-4">
            <div class="card-icon card-icon-large">
              <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="mb-4">
              <h5 class="card-title mb-0">Mainbook Entries</h5>
            </div>
            <div class="row align-items-center mb-2 d-flex">
              <div class="col-8">
                <h2 class="d-flex align-items-center mb-0"><%= current_user.main_books.count%> <%= ' entries' %></h2>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% running_total = 0 %>
        <% running_total_credit = 0 %>
  <% running_total_debit = 0 %>
    <% @main_books.each do |mainbook| %>
    <% if mainbook.user == current_user %>
          <% running_total = calculate_total_balance(running_total, calculate_balance(mainbook.debit_mainb, mainbook.credit_mainb)) %></td>
      <% running_total_debit = calculate_total_debit(running_total_debit, mainbook.debit_mainb) %></td>
      <% running_total_credit = calculate_total_credit(running_total_credit, mainbook.credit_mainb) %></td>
    <% end %>
    <% end %>
      <div class="col-xl-3 col-lg-6">
        <div class="card l-bg-blue-dark">
          <div class="card-statistic-3 p-4">
            <div class="card-icon card-icon-large">
              <i class="fas fa-users"></i>
            </div>
            <div class="mb-4">
              <h5 class="card-title mb-0">Mainbook</h5>
            </div>
            <div class="row align-items-center mb-2 d-flex">
              <div class="col-8">
                <h2 class="d-flex align-items-center mb-0"><%= number_to_currency(running_total, unit: ' PHP ') %></h2>
              </div>
              <div class="col-4 text-right">
                <span>Total Balance  <i class="fa fa-arrow-up"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="card l-bg-gold">
          <div class="card-statistic-3 p-4">
            <div class="card-icon card-icon-large">
              <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="mb-4">
              <h5 class="card-title mb-0">Mainbook</h5>
            </div>
            <div class="row align-items-center mb-2 d-flex">
              <div class="col-8">
                <h2 class="d-flex align-items-center mb-0"><%= number_to_currency(running_total_debit, unit: ' PHP ') %></h2>
              </div>
              <div class="col-4 text-right">
                <span>Total Debit (+)  <i class="fa fa-arrow-up"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="card l-bg-blue-dark">
          <div class="card-statistic-3 p-4">
            <div class="card-icon card-icon-large">
              <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="mb-4">
              <h5 class="card-title mb-0">Mainbook</h5>
            </div>
            <div class="row align-items-center mb-2 d-flex">
              <div class="col-8">
                <h2 class="d-flex align-items-center mb-0"><%= number_to_currency(running_total_credit, unit: ' PHP ') %></h2>
              </div>
              <div class="col-4 text-right">
                <span>Total Credit (-)<i class="fa fa-arrow-up"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-6">
        <div class="card l-bg-gold">
          <div class="card-statistic-3 p-4">
            <div class="card-icon card-icon-large">
              <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="mb-4">
              <h5 class="card-title mb-0">Mainbook</h5>
            </div>
            <div class="row align-items-center mb-2 d-flex">
              <div class="col-8">
                <h2 class="d-flex align-items-center mb-0"><%= number_to_currency(running_total_credit, unit: ' PHP ') %></h2>
              </div>
              <div class="col-4 text-right">
                <span>Total Credit (-)<i class="fa fa-arrow-up"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>